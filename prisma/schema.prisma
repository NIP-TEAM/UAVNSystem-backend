generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // TODO: 转为环境变量
  url      = env("DATABASE_URL")
}

model UserInfo {
  id        Int     @id @default(autoincrement())
  password  String
  name      String
  active    Boolean
  lastLogin Int
  email     String

  @@index([email])
}
